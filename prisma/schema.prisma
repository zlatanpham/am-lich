generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Account {
  id                       String  @id @default(cuid())
  userId                   String
  type                     String
  provider                 String
  providerAccountId        String
  refresh_token            String?
  access_token             String?
  expires_at               Int?
  token_type               String?
  scope                    String?
  id_token                 String?
  session_state            String?
  refresh_token_expires_in Int?
  user                     User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Organization {
  id                 String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name               String               @db.VarChar(255)
  owner_user_id      String?
  created_at         DateTime?            @default(now()) @db.Timestamptz(6)
  updated_at         DateTime?            @default(now()) @db.Timestamptz(6)
  User               User?                @relation(fields: [owner_user_id], references: [id], onUpdate: NoAction, map: "fk_owner_user")
  OrganizationMember OrganizationMember[]
}

/// This table contains check constraints and requires additional setup for migrations. Visit https://pris.ly/d/check-constraints for more info.
model OrganizationMember {
  id              String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  organization_id String       @db.Uuid
  user_id         String
  role            String       @db.VarChar(50)
  joined_at       DateTime?    @default(now()) @db.Timestamptz(6)
  Organization    Organization @relation(fields: [organization_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_organization")
  user            User         @relation(fields: [user_id], references: [id], onDelete: Cascade, onUpdate: NoAction, map: "fk_user")

  @@unique([organization_id, user_id])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id                               String                            @id @default(cuid())
  name                             String?
  email                            String?                           @unique
  emailVerified                    DateTime?
  image                            String?
  password                         String?
  reset_password_token             String?                           @map("resetPasswordToken")
  reset_password_expires           DateTime?                         @map("resetPasswordExpires")
  Account                          Account[]
  LunarEvent                       LunarEvent[]
  Organization                     Organization[]
  OrganizationMember               OrganizationMember[]
  Session                          Session[]
  Petitioner                       Petitioner[]
  PrayerTemplate                   PrayerTemplate[]
  PrayerSettings                   PrayerSettings?
  VietnameseLunarEvent             VietnameseLunarEvent[]
  sharedEventsOwned                EventShare[]                      @relation("EventShareOwner")
  sharedEventsReceived             EventShare[]                      @relation("EventShareRecipient")
}

model Petitioner {
  id           String   @id @default(cuid())
  userId       String
  name         String   @db.VarChar(255)
  birthYear    Int
  buddhistName String?  @db.VarChar(255)
  isHead       Boolean  @default(false)
  order        Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model PrayerTemplate {
  id        String   @id @default(cuid())
  userId    String
  type      String   @db.VarChar(50)
  content   String   @db.Text
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, type])
}

model PrayerSettings {
  id            String   @id @default(cuid())
  userId        String   @unique
  familySurname String?  @db.VarChar(255)
  address       String?  @db.Text
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model VietnameseLunarEvent {
  id                   String   @id @default(cuid())
  userId               String
  title                String   @db.VarChar(255)
  description          String?
  lunarYear            Int
  lunarMonth           Int      @db.SmallInt
  lunarDay             Int      @db.SmallInt
  vietnameseZodiacYear String   @db.VarChar(50)
  eventType            String   @default("personal") @db.VarChar(50)
  culturalSignificance String?
  isRecurring          Boolean  @default(false)
  isActive             Boolean  @default(true)
  reminderDays         Int      @default(3) @db.SmallInt
  isAncestorWorship    Boolean  @default(false)
  ancestorName         String?  @db.VarChar(255)
  isLeapMonth          Boolean  @default(false)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, lunarYear, lunarMonth])
  @@index([eventType, lunarMonth, lunarDay])
  @@index([isAncestorWorship, userId])
}

model LunarEvent {
  id              String   @id @default(cuid())
  userId          String
  title           String   @db.VarChar(255)
  description     String?
  lunarYear       Int
  lunarMonth      Int      @db.SmallInt
  lunarDay        Int      @db.SmallInt
  isRecurring     Boolean  @default(false)
  isActive        Boolean  @default(true)
  reminderDays    Int      @default(3) @db.SmallInt
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
  ancestorName    String?  @db.VarChar(255)
  ancestorPrecall String?  @db.VarChar(100)
  eventType       String   @default("general") @db.VarChar(50)
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, lunarYear, lunarMonth])
  @@index([lunarYear, lunarMonth, lunarDay])
}

model VietnameseHoliday {
  id                   String   @id @default(cuid())
  name                 String   @db.VarChar(255)
  lunarMonth           Int?     @db.SmallInt
  lunarDay             Int?     @db.SmallInt
  gregorianMonth       Int?     @db.SmallInt
  gregorianDay         Int?     @db.SmallInt
  description          String?
  category             String   @db.VarChar(50)
  culturalSignificance String?
  isActive             Boolean  @default(true)
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  @@index([lunarMonth, lunarDay])
  @@index([gregorianMonth, gregorianDay])
  @@index([category])
}

model VietnameseZodiacInfo {
  id              String   @id @default(cuid())
  year            Int      @unique
  vietnameseYear  String   @db.VarChar(50)
  canChi          String   @db.VarChar(20)
  animalName      String   @db.VarChar(50)
  element         String   @db.VarChar(20)
  characteristics String?
  luckyNumbers    String?  @db.VarChar(100)
  luckyColors     String?  @db.VarChar(100)
  culturalNotes   String?
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([year])
}

model VietnameseCulturalTip {
  id              String   @id @default(cuid())
  lunarDay        Int      @db.SmallInt
  tipCategory     String   @db.VarChar(50)
  title           String   @db.VarChar(255)
  content         String
  culturalContext String?
  isGoodDay       Boolean  @default(true)
  priority        Int      @default(1) @db.SmallInt
  isActive        Boolean  @default(true)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@index([lunarDay, tipCategory])
  @@index([isGoodDay, priority])
}

enum EventShareStatus {
  PENDING
  ACCEPTED
  DECLINED
  CANCELLED
}

model EventShare {
  id             String           @id @default(cuid())
  ownerId        String
  recipientId    String?
  recipientEmail String
  status         EventShareStatus @default(PENDING)
  createdAt      DateTime         @default(now())
  updatedAt      DateTime         @updatedAt
  acceptedAt     DateTime?
  declinedAt     DateTime?
  cancelledAt    DateTime?

  owner      User                  @relation("EventShareOwner", fields: [ownerId], references: [id], onDelete: Cascade)
  recipient  User?                 @relation("EventShareRecipient", fields: [recipientId], references: [id], onDelete: Cascade)
  invitation EventShareInvitation?

  @@unique([ownerId, recipientEmail])
  @@index([ownerId])
  @@index([recipientId])
  @@index([recipientEmail])
}

model EventShareInvitation {
  id           String     @id @default(cuid())
  eventShareId String     @unique
  token        String     @unique @default(cuid())
  email        String
  expiresAt    DateTime
  createdAt    DateTime   @default(now())

  eventShare EventShare @relation(fields: [eventShareId], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([email])
}
